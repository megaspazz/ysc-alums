source 'https://rubygems.org'

#gem 'hash_syntax'

gem 'rails', '3.2.12'

# The following gems are necessary to get the website to display beautifully
gem 'therubyracer'
gem 'bootstrap-sass', '~> 2.3.0.1'
gem 'will_paginate'
gem 'bootstrap-will_paginate'

# This is magical security gem
gem 'bcrypt-ruby', '~> 3.0.0'

# This gem is used to upload profile pics, version is to maintain compatibility with Dreamhost's Ruby 1.8.7
gem 'paperclip', '2.7.5'

# This gem is used for the OP location searching
gem 'geocoder'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

# Probably an important gem, not sure exactly what it does, though...
gem 'jquery-rails'


group :development do
  # sqlite is good for local development
  gem 'sqlite3'
end

group :production do
  # Dreamhost uses mySQL database
  gem 'mysql2'
end



# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  # gem 'therubyracer', :platforms => :ruby

  gem 'uglifier', '>= 1.0.3'
end

