<% provide(:title, 'Sign Up') %>

<h1>Registration</h1>

<div class="row">
	<div class="span6 offset3">

		<%= form_for(@user) do |f| %>
      <div class="topic-info">

			  <h4>Please enter your basic information here.</h4>

			  <%= f.label :name  %>
			  <%= f.text_field :name, :class => "has-focus-tooltip", :title => "First and last (and maybe middle)" %>

			  <%= f.label :email, 'Email' %>
			  <%= f.text_field :email, :class => "has-focus-tooltip", :title => "You need an '@yale.edu' or an '@aya.yale.edu' email in order to confirm your email.  If you don't have one, an admin will need to confirm your email for you after you register." %>

        <%= render('user_password', :f => f) %>

			  <div class="check-box-with-text">
				  <%= f.check_box :alum, :class => "cb" %>
				  <%= f.label :alum, "I'm a YSC Alum!", :class => "lbl" %>
			  </div>

      </div>

			<%= f.submit "Create my account", :class => "btn btn-large btn-primary" %>

		<% end %>

		<p>Already have an account?  Click <%= link_to("here", login_url) %> to login.</p>
    <div class="notice">* You need an "@yale.edu" or an "@aya.yale.edu" email in order to confirm your email.  If you don't have one, an admin will need to confirm your email for you. </div>
		
	</div>
</div>
