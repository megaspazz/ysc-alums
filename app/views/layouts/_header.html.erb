  <div class="navbar-inner">
	  <div class="container">
      <nav>
        <%= link_to(image_tag("ysc-banner-1.png", :id => "logo"), home_url) %>
	      <ul id="header-options" class="nav pull-right">
	        <li><%= link_to("Home", home_url) %></li>
	        <li><%= link_to("Help", help_url) %></li>
	        
	        <% if (signed_in?) %>
	          <li><%= link_to("People", users_url) %></li>
	          
